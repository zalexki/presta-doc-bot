{% extends "base.html.twig" %}

{% block title %}List pull request of prestashop docs{% endblock %}

{% block body %}
    <div class="container">
        <table class="table table-hover">
            <thead class="thead">
                <tr>
                    <th scope="col">{{'homepage.Author'|trans}}</th>
                    <th scope="col">{{'homepage.Message_ID'|trans}}</th>
                    <th scope="col">{{'homepage.Created_at'|trans}}</th>
                </tr>
            </thead>
            <tbody>
                {% for commit in pullRequests %}
                    <tr>
                        <td>
                            <a href="https://github.com/{{commit.user.name}}">
                                <img class="img-thumbnail" src="{{ commit.user.avatar }}" alt="{{ commit.user.name }}"/>
                            </a>
                        </td>
                        <td>
                            <a href="{{ commit.urlPullRequest }}">#{{ commit.number }} : {{ commit.title }}</a>
                        </td>
                        <td>
                            {{ commit.prCreatedAt|date('Y-m-d H:i:s') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {# TODO: load more datas #}
        {# <button type="button" class="btn btn-primary">Load more</button> #}

        <footer style="margin-top:25px;margin-bottom:25px">
            <a href="https://github.com/PrestaShop/docs">Prestashop Docs</a>
        </footer>
    </div>
{% endblock %}
